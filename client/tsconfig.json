{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "jsx": "react-jsx",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "strict": false,
      "baseUrl": ".",
      "paths": {
        "~/components/*": ["components/*"],
        "~/lib/*": ["lib/*"]
      }
    },
    "include": ["src", "components", "@/components/ui"],
    "exclude": ["node_modules"]
  }